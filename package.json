{
  "name": "THREE_Boilerplate",
  "description": "Three.js Boilerplate",
  "author": "csiejoey",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "webpack-dev-server --progress --colors --hot -d --inline",
    "test": "mocha --compilers js:babel-register",
    "deploy": "ghpages",
    "ghpages": "ghpages",
    "lint": "semistandard --fix -v | snazzy",
    "precommit": "npm run lint"
  },
  "semistandard": {
    "ignore": [
      "build/**",
      "dist/**",
      "test/**"
    ]
  },
  "repository": "https://github.com/csiejoey/three-boilerplate.git",
  "keywords": [
    "3d",
    "three",
    "three.js"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "babel-core": "^7.0.0-bridge.0",
    "babel-preset-env": "^2.0.0-alpha.20",
    "babel-register": "^7.0.0-beta.3",
    "cross-env": "^5.1.4",
    "ghpages": "0.0.3",
    "husky": "^0.14.3",
    "mocha": "^5.0.5",
    "semistandard": "^12.0.1",
    "snazzy": "^7.1.1",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  },
  "dependencies": {
    "three": "^0.91.0"
  }
}
